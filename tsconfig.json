{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true, // 	Allows usage of an alternate module import syntax: import foo from 'foo';
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
        "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": [
    "src/**/*"
  ]
}
